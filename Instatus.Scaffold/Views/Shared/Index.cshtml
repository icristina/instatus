@inherits Instatus.Integration.Mvc.ExtendedViewPage

@using Instatus.Core
@using Instatus.Scaffold

<div class="container">
    <div class="form-actions">
        @Html.ActionLink(Phrase("Create"), "Create", null, new { target = "_blank", @class = "btn btn-primary" })
    </div>    
    <table class="table table-striped table-bordered table-condensed span12">
        <thead>
            <tr>
                <th>@Phrase("Id")</th>
                <th style="width: 50%;">@Phrase("Title")</th>
                <th>@Phrase("Actions")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (dynamic item in Model as IPaged)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ToString()</td>
                    <td>
                        @Html.ActionLink(Phrase("Details"), "Details", new { id = item.Id }, new { target = "_blank", @class = "btn" })
                        @Html.ActionLink(Phrase("Edit"), "Edit", new { id = item.Id }, new { target = "_blank", @class = "btn" })
                        @using (Html.BeginForm("Delete", ViewContext.RouteData.GetRequiredString("controller"), new { id = item.Id }, FormMethod.Post, new { style = "display: inline;" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Submit(Phrase("Delete"), "btn")
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="span12">
        @Html.Pagination(Model as IPaged)
    </div>
</div>