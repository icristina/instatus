@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.EditorForModel()
    <button type="submit">Login</button>
}

@using (Html.BeginForm("ExternalLogin", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.DropDownList("provider", new SelectList(new string[] { "Facebook", "Google" }))
    <button type="submit">Login via external provider</button>
}