@model IWebView

<ul>
    <li>
        @if (Model.Tags.SelectedValue.IsEmpty())
        {
            @WebPhrase.All
        }
        else
        {
            @Html.ActionLink(WebPhrase.All, ViewContext.RouteData.ActionName())
        }
        <ul>
            @foreach (var tag in Model.Tags)
            {
                <li>
                    @Html.ActionLinkOrText(tag.Selected, tag.Text, ViewContext.RouteData.ActionName(), Model.Query.WithTag(tag.Value).ToRouteValueDictionary())
                </li>
            }            
        </ul>
    </li>
</ul>