@model string

@{
    var attributes = Html.ValidationAttributes()
                        .AddNonEmptyValue("class", "input-xlarge");    
}

@Html.TextBox("", string.Format(ViewData.ModelMetadata.EditFormatString ?? "{0}", Model), attributes)

@Html.CommandButton(WebPhrase.Choose, "openFilePicker", "btn")

@if (!Model.IsEmpty() && WebMimeType.IsRelativePathPhoto(Model))
{
    @Html.Image(Model, className: "thumbnail")    
}
else
{
    <img src="" style="display: none;" class="thumbnail"/>
}