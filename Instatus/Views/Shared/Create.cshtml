@{
    Layout = "~/Views/Shared/_Scaffold.cshtml";
}

@helper Create() {
    <div class="form-actions">
        @Html.SubmitButton(WebPhrase.Create, "btn btn-primary")
    </div>
    @Html.EditorForModel()    
}

<div class="container">
    @if (ViewData.ModelMetadata.AdditionalValues.Value("File").AsBoolean())
    {
        using (Html.BeginMultipartForm(className: "form-horizontal"))
        {
            @Create()
        }
    }
    else
    {
        using (Html.BeginForm("Create", ViewContext.RouteData.ControllerName(), FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Create()
        }
    }    
</div>