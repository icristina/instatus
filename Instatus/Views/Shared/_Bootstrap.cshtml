<!DOCTYPE html>
<html @Html.BrowserCapabilitiesAttributes()>
<head>
    <meta charset="utf-8" />
    @Html.Title()
    @Html.Viewport()
    @Html.MetaTags()
    @Html.Stylesheet("bootstrap.css")
    @Html.Stylesheet("bootstrap-responsive.css")
    @Html.Scripts("modernizr.js", "jquery.js", "respond.js", "bootstrap.js")
    @RenderSection("head", false)
    @Html.Parts(WebZone.Head)
</head>
<body@(Html.RouteDataAttributes())@(Html.FormattingAttributes())>
    <div class="application-canvas">
        <header role="banner" class="container">
            <div>
                @RenderSection("banner", false)
                @Html.Parts(WebZone.Banner)                
            </div>
        </header>
        <nav role="navigation" class="container">
            <div>
                @RenderSection("navigation", false)
                @Html.Parts(WebZone.Navigation)        
            </div>
        </nav>    
        <section role="main" class="page-canvas container">
            <header class="page-header">
                @RenderSection("header", false)
                @Html.Parts(WebZone.Header)                
            </header>      
            <figure>
                @RenderSection("figure", false)
                @Html.Parts(WebZone.Figure) 
            </figure>
            <menu>
                @RenderSection("menu", false)
                @Html.Parts(WebZone.Menu) 
            </menu>
            <div class="page-body">
                @RenderBody()  
                @Html.Parts(WebZone.Body)
            </div>   
            <aside>
                @RenderSection("aside", false)
                @Html.Parts(WebZone.Aside)
            </aside>
        </section>
        <footer role="contentinfo" class="container">
            <div>
                @RenderSection("footer", false)
                @Html.Parts(WebZone.Footer) 
            </div>
        </footer>
    </div>
    @RenderSection("scripts", false)
    @Html.Parts(WebZone.Scripts)
</body>
</html>