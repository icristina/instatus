@model IWebView
           
@using Instatus.Data

@{
    Layout = "~/Views/Shared/_Scaffold.cshtml";
}

@section head {
    <link rel="self" href="@Url.Self(Model)" />
}

<nav class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">    
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <div class="nav-collapse">
                @Html.Partial("Nav", Model.Navigation, new WebFormatting() { MaxLength = 6 })
                @Html.Partial("LoginStatus")
            </div>
        </div>
    </div>
</nav>   
<section class="container">
    <header class="page-header">
        @Html.Tag("h1", Model.Document.Title)    
    </header>
    <menu>
        @Html.Partial("Menu", Model)
    </menu>
    <table class="table table-striped">
        <colgroup>
            <col class="id" />
            @if (Model.Columns.Contains("Slug"))
            {
                <col class="slug" />
            }
            <col class="description" />
            <col class="icon" />
            <col class="actions" />
        </colgroup>
        <thead>
            <tr>
                <th>@WebPhrase.Id</th>
                @if (Model.Columns.Contains("Slug"))
                {
                    <th>@WebPhrase.Slug</th>
                }
                <th>@WebPhrase.Description</th>
                <th></th>
                <th>@WebPhrase.Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (dynamic entry in Model)
            {
                Model.CurrentRow = entry;
                <tr>
                    <td>
                        @((entry as object).GetKey())
                    </td>
                    @if (Model.Columns.Contains("Slug"))
                    {
                        <td>
                            @entry.Slug                  
                        </td>
                    }
                    <td>
                        @Html.Partial("Entry", entry as object)
                    </td>
                    <td>
                        @if (Model.Columns.Contains("Status"))
                        {
                            if ((entry.Status as String).AsEnum<WebStatus>() != WebStatus.Published)
                            {
                                <i class="icon-ban-circle" title="@entry.Status"></i>
                            }   
                        }
                    </td>
                    <td>
                        @Html.Partial("Actions", Model)
                        @Html.Partial("Commands", Model)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (!Model.Document.IsEmpty() && !Model.Document.Body.IsEmpty())
    {
        <aside>
            @Html.Content(Model.Document.Body)
        </aside>
    }
</section>